BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        TextInput:
            id: input_miles
            text: '10'
            font_size: 30
            multiline: False
            on_text: app.handle_calculate(self.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_miles.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_miles.text, -1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_calculate(input_miles.text)
    Label:
        text: app.output_km
        font_size: 48
        color: (0, 1, 1, 1)


